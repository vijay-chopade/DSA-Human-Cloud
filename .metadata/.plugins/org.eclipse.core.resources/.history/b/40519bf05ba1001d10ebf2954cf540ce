	public static void form(ArrayList<Menu> list) {

		Iterator<Menu> ite = list.iterator();
		while (ite.hasNext()) {
			Menu m = ite.next();
			System.out.println(m.getId() + " " + m.getName());
		}
		System.out.println();
	}

	public static void formi(ArrayList<MenuItem> list) {
		Iterator<MenuItem> ite = list.iterator();
		while (ite.hasNext()) {
			MenuItem m = ite.next();
			System.out.println(m.getId() + " " + m.getName());

		}
		System.out.println();
	}

}

