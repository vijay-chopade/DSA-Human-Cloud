package com.ServerAPI;

import java.util.ArrayList;
import java.util.Iterator;
import java.util.List;

public class Menu extends MenuItem {
	private int id;
	private String name;
	private ArrayList<MenuItem> mi = new ArrayList<>();

	public Menu() {

	}

	public Menu(int id, String name) {
		this.id = id;
		this.name = name;
	}

	public void addMI(MenuItem item) {
		item.setParent(this);
		mi.add(item);
	}

	public List<MenuItem> getMI() {
		return mi;
	}

	public void display() {
		System.out.println(id + " : " + name);
	}

	public void display1() {
		getMI().stream().forEach(e -> System.out.println(e.getId() + " : " + e.getName()+" "+e.getParent().id));
	}
	
	public void display2() {
		
		
		
		
//		getMI().stream().forEach(e ->);
//		ArrayList<MenuItem> mii = new ArrayList<>();
		System.out.println(getMI());
		System.out.println(">>>>>>>>>>>>>>");
//		MenuItem miten = null;
//		while(ite.hasNext()) {
//			miten = ite.next();
//			System.out.println(miten.getId());
//			if(miten.getParent().id == 1) {
//				System.out.println("List");
//			}
//			else if(miten.getParent().id == 2) {
//				System.out.println("Queue");
//			}
//			else if(miten.getParent().id == 3) {
//				System.out.println("Stack");
//			}
//			else {
//				System.out.println("NULL");
//			}
//		}
//		System.out.println(miten);
	}

	public Menu(int id, String name, ArrayList<MenuItem> menuItem) {
		super();
		this.id = id;
		this.name = name;
		this.mi = menuItem;
	}

	public int getId() {
		return id;
	}

	public void setId(int id) {
		this.id = id;
	}

	public String getName() {
		return name;
	}

	public void setName(String name) {
		this.name = name;
	}

	@Override
	public String toString() {
		return "MenuItem [id=" + id + ", name=" + name + "]";
	}
}
